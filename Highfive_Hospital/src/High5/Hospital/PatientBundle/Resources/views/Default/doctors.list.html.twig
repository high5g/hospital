{% extends 'High5HospitalPatientBundle:Default:base.html.twig' %}

{% block body %}
    <div class="center-block">
        <div>
            <h2>List of doctors in {{ hospitalName }}:</h2>
        </div>
        <table class="table">
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Speciality</th>
                <th>Hourly rate</th>
            </tr>
            {% for doctor in doctors %}
                <tr>
                    <td>{{ doctor.fkPersonne.prenom }}</td>
                    <td>{{ doctor.fkPersonne.nom }}</td>
                    <td>{{ doctor.specialite }}</td>
                    <td>{{ doctor.tarifParConsultation }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}